-- Inicia processos (read & write)
-- ===============================
BEGIN TRANSACTION;
    
-- Cria a tabela de Categorias
-- ===========================
CREATE TABLE Categories(
    _id    INTEGER PRIMARY KEY AUTOINCREMENT, 
    _name  VARCHAR(60) NOT NULL UNIQUE,
    _brief TEXT DEFAULT "...",
    _color VARCHAR(7) DEFAULT "#000000"
);

-- Cria a tabela de tipos
-- =======================
CREATE TABLE Kinds(
    _id       INTEGER PRIMARY KEY AUTOINCREMENT,
    _id_class INTEGER NOT NULL,
    _name     VARCHAR(60) NOT NULL UNIQUE,
    _icon     VARCHAR(700),
    _exemple  TEXT DEFAULT "...",
    _size     INT   NOT NULL, 
    _min      FLOAT NOT NULL,
    _max      FLOAT NOT NULL,
    FOREIGN KEY (_id_class) REFERENCES Categories (_id)
);

COMMIT;
